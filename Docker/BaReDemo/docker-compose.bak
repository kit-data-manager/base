tomcat:
   build: ./tomcat
   ports: 
     - "8889:8080"
   volumes:
     - ./share/log:/var/log/tomcat7/
     - ./share/cache:/var/lib/tomcat7/webapps/webdav/
     - ./share/archive:/var/archive/
   links:
     - database
     - elasticsearch

database:
   build: ./postgres
   ports:
      - "5432:5432"
   volumes:
      - ./share/db_log:/var/log/psql/
      - ./share/db_config:/etc/psql/
      - ./share/db_data:/var/lib/psql/

elasticsearch:
   build: ./elasticsearch
   ports:
      - "9200:9200"
      - "9300:9300"
   volumes:
      - ./share/idx_data:/data/
   
