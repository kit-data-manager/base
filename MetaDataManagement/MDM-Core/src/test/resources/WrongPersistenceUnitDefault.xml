<DAMA>
  <MetaDataManagement>
    <PersistenceImplementations>
      <PersistenceImplementation>
        <Name>JPA</Name>
        <Class>edu.kit.dama.mdm.core.jpa.PersistenceFactoryJpa</Class>
        <PersistenceUnits>
          <!-- All databases which have to be supported by this implementation. 
               Attention: Labels should be the same for all implementations. -->
          <PersistenceUnit>MDM-Core</PersistenceUnit>  
          <PersistenceUnit devault="true">MDM-Core-Test</PersistenceUnit>  
        </PersistenceUnits>
      </PersistenceImplementation>  
      <PersistenceImplementation>
        <Name>JPA2</Name>
        <Class>edu.kit.dama.mdm.core.jpa.PersistenceFactoryJpa</Class>
        <PersistenceUnits>
          <!-- All databases which have to be supported by this implementation. 
               Attention: Labels should be the same for all implementations. -->
          <PersistenceUnit>MDM-Core2</PersistenceUnit>  
          <PersistenceUnit default="false">MDM-Core-Test2</PersistenceUnit>  
          <PersistenceUnit>PU3</PersistenceUnit>  
        </PersistenceUnits>
      </PersistenceImplementation>  
      <PersistenceImplementation>
        <Name>JPA3</Name>
        <Class>edu.kit.dama.mdm.core.jpa.PersistenceFactoryJpa</Class>
        <PersistenceUnits>
          <!-- All databases which have to be supported by this implementation. 
               Attention: Labels should be the same for all implementations. -->
          <PersistenceUnit>MDM-Core3</PersistenceUnit>  
          <PersistenceUnit>MDM-Core-Test3</PersistenceUnit>  
          <PersistenceUnit default="drue">PU4</PersistenceUnit>  
        </PersistenceUnits>
      </PersistenceImplementation>  
    </PersistenceImplementations>
  </MetaDataManagement>  
</DAMA>
